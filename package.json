{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "prepare": "node .husky/prepare.js",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format:all": "prettier **/*.{js,ts,vue,css,scss,postcss,json,md,yaml} --write",
    "lint:es": "eslint --cache **/*.{js,ts,vue} . --fix",
    "lint:style": "stylelint --cache --fix **/*.{vue,css,scss}"
  },
  "dependencies": {
    "sass": "^1.61.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/node": "^18.15.11",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.3.3",
    "prettier": "^2.8.7",
    "stylelint": "^15.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^7.0.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
